@page
@model TecproSas.App.SitioWeb.Pages_Usuario.CreateModel
@{
}
<h1>Crear Usuario</h1>

<!-- Formulario de creación de un Usuario(nombre,apellidos,direccion,rol,estado,nicknname,contrasenia)-->
<form method="post">
<div asp-validation-summary="All" class="text-danger"></div>
    
<!-- Atributo nombre -->
<div class="form-group">

    <label asp-for="usuario.nombre" class="control-label"></label> 
    <input asp-for="usuario.nombre" class="form-control" />
    <span asp-validation-for="usuario.nombre" class="text-danger"></span>

</div>

<!-- Atributo apellidos -->
<div class="form-group">

    <label asp-for="usuario.apellidos" class="control-label"></label> 
    <input asp-for="usuario.apellidos" class="form-control" />
    <span asp-validation-for="usuario.apellidos" class="text-danger"></span>

</div>
<!-- Atributo direccion -->
<div class="form-group">

    <label asp-for="usuario.direccion" class="control-label"></label> 
    <input asp-for="usuario.direccion" class="form-control" />
    <span asp-validation-for="usuario.direccion" class="text-danger"></span>

</div>
<!-- Atributo rol -->
<div class="form-group">

    <label asp-for="usuario.rol" class="control-label"></label> 
    <input asp-for="usuario.rol" class="form-control" />
    <span asp-validation-for="usuario.rol" class="text-danger"></span>

</div>
<!-- Atributo estado -->
<div class="form-group">

    <label asp-for="usuario.estado" class="control-label"></label> 
    <input asp-for="usuario.estado" class="form-control" />
    <span asp-validation-for="usuario.estado" class="text-danger"></span>

</div>
<!-- Atributo nicknname -->
<div class="form-group">

    <label asp-for="usuario.nicknname" class="control-label"></label> 
    <input asp-for="usuario.nicknname" class="form-control" />
    <span asp-validation-for="usuario.nicknname" class="text-danger"></span>

</div>
<!-- Atributo contrasenia -->
<div class="form-group">

    <label asp-for="usuario.contrasenia" class="control-label"></label> 
    <input asp-for="usuario.contrasenia" class="form-control" />
    <span asp-validation-for="usuario.contrasenia" class="text-danger"></span>

</div>

<!-- Botón crear -->

<div class="form-group">

    <input type="submit" value="Crear" class="btn btn-primary" />

</div>
</form>
